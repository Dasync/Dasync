<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageVersion>2.0.0-beta3</PackageVersion>
    <Authors>Dasync</Authors>
    <Copyright>Copyright © 2019 D-ASYNC</Copyright>
    <Title>Deprecated extended JSON serializer for D-ASYNC</Title>
    <PackageDescription>Deprecated extended JSON serializer for D-ASYNC.</PackageDescription>
    <PackageIconUrl>https://dasync.blob.core.windows.net/public/media/gears244.png</PackageIconUrl>
    <PackageLicenseUrl>https://raw.githubusercontent.com/Dasync/Dasync/master/LICENSE</PackageLicenseUrl>
    <PackageTags>d-async;dasync;serialization;json</PackageTags>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <NoPackageAnalysis>true</NoPackageAnalysis>
